<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginVertical="5dp"
    android:orientation="horizontal"
    android:background="#2F2F2F"
    android:id="@+id/container">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#2F2F2F"
        android:id="@+id/sub_container">
    <TextView
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:id="@+id/title_exercise"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/sub_container"
        app:layout_constraintStart_toStartOf="@id/sub_container"
        android:textSize="60sp"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:layout_margin="10dp"
            android:id="@+id/increment"
            app:layout_constraintEnd_toStartOf="@id/duration"
            app:layout_constraintBottom_toBottomOf="@id/sub_container"
            app:layout_constraintTop_toTopOf="@id/sub_container"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/decrement"
        app:layout_constraintBottom_toBottomOf="@id/sub_container"
        app:layout_constraintTop_toTopOf="@id/sub_container"
        android:text="0"
        android:id="@+id/duration"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:textSize="40sp"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        android:id="@+id/decrement"
        app:layout_constraintEnd_toEndOf="@id/sub_container"
        app:layout_constraintBottom_toBottomOf="@id/sub_container"
        app:layout_constraintTop_toTopOf="@id/sub_container"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/rating_launcher"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_exercise"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/play_arrow_foreground" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>